<script>
  $(document).ready(function () {

    load_data();

    function load_data() {
      $.ajax({
        url: "https://www.gdbulletin.com/grades/action",
        method: "POST",
        data: {
          action: 'fetch_names'
        },
        dataType: "JSON",
        success: function (data) {
          var html = '<option selected></option>';

          if (data.data.length > 0) {
            for (var count = 0; count < data.data.length; count++) {
              html += ` <option value="` + data.data[count].USER_ID + `">
            ` + data.data[count].NAME + `</option>
            `;
            }
          }

          $('#select_names').html(html);
        }
      });
    }

    $('#select_names').change(function () {
      var id = document.getElementById("select_names").value;
      if (id != "") {
        document.getElementById('add_subject').style.visibility = 'visible';
        document.getElementById('label_avg').style.visibility = 'visible';
        document.getElementById('avg').style.visibility = 'visible';
        document.getElementById('add_subject').setAttribute("name", id);
      } else {
        document.getElementById('add_subject').style.visibility = 'hidden';
        document.getElementById('label_avg').style.visibility = 'hidden';
        document.getElementById('avg').style.visibility = 'hidden';
      }
      $.ajax({
        url: "https://www.gdbulletin.com/grades/action",
        method: "POST",
        data: {
          id: id,
          action: 'fetch_grades'
        },
        dataType: "JSON",
        success: function (data) {
          var html = '';
          var average = 0;
          var total = 0;
          if (data.data.length > 0) {
            for (var count = 0; count < data.data.length; count++) {
              var subject = `<td class="width-20" style="background-color:` + data.data[count].COLOR +
                `;" rowspan="2">` +
                data.data[count].SUBJECT_NAME + `</td>`;
              var pace = `<td class="width-15">` + data.data[count].PACE_NUMBER + `</td>`;
              var grade = `<td class="width-15"><input data-id="` + data.data[count].GRADE_ID +
                `" class="no-border grade_input" type="number" value="` + data.data[count].GRADE +
                `"size="4" min="80" max="100"></td>`;
              var add =
                `<td class="width-5" rowspan="2"><button type="button" class="btn btn-success btn-sm add" data-id="` +
                data.data[count].SUBJECT_ID + `">+</button></td>`;
              if (html.includes(subject) == false) {
                html += `<tr>` + add + subject + pace + `</tr><tr>` + grade + `</tr>`;
              } else {
                var index = html.lastIndexOf(subject) + subject.length;
                index = html.indexOf("</tr>", index);
                html = [html.slice(0, index), pace, html.slice(index)].join('');
                index = html.indexOf("</tr>", index + pace.length + 6);
                html = [html.slice(0, index), grade, html.slice(index)].join('');
              }
              if(data.data[count].GRADE != 0){
                average = (average + data.data[count].GRADE);
                total += 1;
              }
              
            }

            average = average / total;
          }

          $('#avg').text(average.toFixed(2) + "%");
          $('#grades_table tbody').html(html);
        }
      });

    });

    $(document).on('change', '.grade_input', function () {
      var id = $(this).data('id');
      var grade = $(this).val();
      if (grade >= 80 && grade <= 100) {
        $.ajax({
          url: "https://www.gdbulletin.com/grades/action",
          method: "POST",
          data: {
            id: id,
            grade: grade,
            action: 'edit'
          },
          dataType: "JSON",
          success: function (data) {
            $('#message').html('<div class="alert alert-success">' + data.message + '</div>');
            $('#select_names').change();
            setTimeout(function () {
              $('#message').html('');
            }, 5000);
          }
        });
      } else {
        $('#message').html('<div class="alert alert-danger">Ingrese un valor válido</div>');
        $('#select_names').change();
        setTimeout(function () {
          $('#message').html('');
        }, 5000);
      }

    });

    $('#add_subject').click(function () {

      var id = document.getElementById('add_subject').getAttribute('name');

      $.ajax({
        url: "https://www.gdbulletin.com/grades/action",
        method: "POST",
        data: {
          action: 'fetch_subject_info',
          id: id
        },
        dataType: "JSON",
        success: function (data) {
          var html = '<option selected></option>';

          //SUBJECT DATA
          if (data.data.length > 0) {
            for (var count = 0; count < data.data.length; count++) {
              html += ` <option value="` + data.data[count].SUBJECT_ID + `">
            ` + data.data[count].SUBJECT_NAME + `</option>
            `;
            }
          }

          $('#select_subjects').html(html);
        }
      });


      $('#dynamic_modal_title').text('Agregar Materia');

      $('#subject_form')[0].reset();

      $('#action').val('Add');

      $('#action_button').text('Agregar');

      $('#action_modal').modal('show');

      document.getElementById('id').setAttribute("value", id);


    });


    $('#select_subjects').change(function () {

      var id = document.getElementById("select_subjects").value;

      $.ajax({
        url: "https://www.gdbulletin.com/grades/action",
        method: "POST",
        data: {
          action: 'fetch_number_info',
          id: id
        },
        dataType: "JSON",
        success: function (data) {
          var html = '<option selected></option>';

          //NUMBER DATA
          if (data.data.length > 0) {
            for (var count = data.data[0].LOW_RANGE; count <= data.data[0].HIGH_RANGE; count++) {
              html += ` <option value="` + count + `">
      ` + count + `</option>
      `;
            }
          }

          $('#select_numbers').html(html);
        }
      });

    });



    $('#subject_form').on('submit', function (event) {

      event.preventDefault();

      var id = document.getElementById('add_subject').getAttribute('name');

      $.ajax({
        url: "https://www.gdbulletin.com/grades/action",
        method: "POST",
        data: $('#subject_form').serialize(),
        dataType: "JSON",
        beforeSend: function () {
          $('#action_button').attr('disabled', 'disabled');
        },
        success: function (data) {

          $('#action_button').attr('disabled', false);

          $('#message').html('<div class="alert alert-success">' + data.message + '</div>');

          $('#action_modal').modal('hide');

          $('#select_names').change();

          setTimeout(function () {
            $('#message').html('');
          }, 5000);
        }
      });

    });

    $(document).on('click', '.add', function () {

      var id = $(this).data('id');
      var user = document.getElementById("select_names").value;

      $.ajax({
        url: "https://www.gdbulletin.com/grades/action",
        method: "POST",
        data: {
          id: id,
          action: 'comparison'
        },
        dataType: "JSON",
        success: function (data) {
          var max = data.data[0].HIGH_RANGE;
          var actual = data.data[0].MAX;

          if(actual<max){
            actual = actual + 1;
            console.log(actual);
            $.ajax({
            url: "https://www.gdbulletin.com/grades/action",
            method: "POST",
            data: {
              user: user,
              subject: id,
              number: actual, 
              action: 'add_cell'
            },
            dataType: "JSON",
            success: function (data) {
              $('#select_names').change();
            }
          });
          }else{
            $(this).attr('disabled', false);
            $(this).attr('style',  'background-color:gray');
          }
        }
      });

    });

    $('#signOut').click(function () {
      $.ajax({
        url: "https://www.gdbulletin.com/header/signOut",
        method: "POST",
        data: {
          action: 'signOut',
        },
        dataType: "JSON",
        success: function (data) {
          location.replace("https://www.gdbulletin.com/");
        }
      });
    });

  });
</script>