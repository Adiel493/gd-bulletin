                        <select id="select_subjects" class="form-select" name="subject" id="subject" required>
                        </select>
                        <div class="invalid-feedback">Please select a subject</div>
                      </div>
                      <div class="col-12">
                        <label for="begin" class="form-label">Iniciar desde</label>
                        <select id="select_numbers" class="form-select" name="begin" id="begin" required>
                        </select>
                        <div class="invalid-feedback">Please select a beginning PACE</div>
                      </div>
                      <div class="modal-footer">
                        <input type="hidden" name="id" id="id" />
                        <input type="hidden" name="action" id="action" value="Add" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" id="action_button">Agregar</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>


      </div>
