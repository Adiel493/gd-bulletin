<script>
  $(document).ready(function () {

    load_data();

    function load_data() {
      $.ajax({
        url: "http://localhost:3000/subjects/action",
        method: "POST",
        data: {
          action: 'fetch'
        },
        dataType: "JSON",
        success: function (data) {
          var html = '';

          if (data.data.length > 0) {
            for (var count = 0; count < data.data.length; count++) {
              html += `
                        <tr>
                            <td>` + data.data[count].CATEGORY + `</td>
                            <td>` + data.data[count].SUBJECT_NAME + `</td>
                            <td>` + data.data[count].LEVEL + `</td>
                            <td>` + data.data[count].CREDITS + `</td>
                            <td><button type="button" class="btn btn-warning btn-sm edit" data-id="` + data.data[count]
                .SUBJECT_ID +
                `">Editar</button>&nbsp;<button type="button" class="btn btn-danger btn-sm delete" data-id="` +
                data.data[count].SUBJECT_ID + `">Eliminar</button></td>
                        </tr>
                        `;
            }
          }

          $('#subject_table tbody').html(html);
        }
      });
    }

    $('#add_data').click(function () {

      $('#dynamic_modal_title').text('Agregar Materia');

      $('#subject_form')[0].reset();

      $('#action').val('Add');

      $('#action_button').text('Agregar');

      $('#action_modal').modal('show');

    });

    $('#subject_form').on('submit', function (event) {

      event.preventDefault();
      console.log($('#subject_form').serialize());

      $.ajax({
        url: "http://localhost:3000/subjects/action",
        method: "POST",
        data: $('#subject_form').serialize(),
        dataType: "JSON",
        beforeSend: function () {
          $('#action_button').attr('disabled', 'disabled');
        },
        success: function (data) {
          $('#action_button').attr('disabled', false);

          $('#message').html('<div class="alert alert-success">' + data.message + '</div>');

          $('#action_modal').modal('hide');

          load_data();

          setTimeout(function () {
            $('#message').html('');
          }, 5000);
        }
      });

    });

    $(document).on('click', '.edit', function () {

      var id = $(this).data('id');


      $('#dynamic_modal_title').text('Editar Materia');

      $('#action').val('Edit');

      $('#action_button').text('Editar');

      $('#action_modal').modal('show');

      $.ajax({
        url: "http://localhost:3000/subjects/action",
        method: "POST",
        data: {
          id: id,
          action: 'fetch_single'
        },
        dataType: "JSON",
        success: function (data) {
          $('#subject').val(data.SUBJECT_NAME);
          $('#category').val(data.CATEGORY);
          $('#credits').val(data.CREDITS);
          $('#low_range').val(data.LOW_RANGE);
          $('#high_range').val(data.HIGH_RANGE);
          $('#level').val(data.LEVEL);
          $('#id').val(data.SUBJECT_ID);
          $('#color').val(data.COLOR);
        }
      });

    });

    $(document).on('click', '.delete', function () {

      var id = $(this).data('id');

      if (confirm("¿Estás seguro que quieres eliminar la materia?")) {
        $.ajax({
          url: "http://localhost:3000/subjects/action",
          method: "POST",
          data: {
            action: 'delete',
            id: id
          },
          dataType: "JSON",
          success: function (data) {
            $('#message').html('<div class="alert alert-success">' + data.message + '</div>');
            load_data();
            setTimeout(function () {
              $('#message').html('');
            }, 5000);
          }
        });
      }

    });

    $('#signOut').click(function () {
      $.ajax({
        url: "http://localhost:3000/header/signOut",
        method: "POST",
        data: {
          action: 'signOut',
        },
        dataType: "JSON",
        success: function (data) {
          location.replace("http://localhost:3000/");
        }
      });
    });
  });
</script>